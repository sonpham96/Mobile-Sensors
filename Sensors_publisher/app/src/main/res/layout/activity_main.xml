<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sonpham.sensors_publisher.MainActivity">

    <Switch
        android:id="@+id/sw_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Pressure Data" />

    <Switch
        android:id="@+id/sw_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Light Data" />

    <Switch
        android:id="@+id/sw_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Temperature Data" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />
</LinearLayout>
