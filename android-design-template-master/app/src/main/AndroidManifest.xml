<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonpham.sensors_publishers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Main">

        <activity android:name="com.sonpham.sensors_publishers.ui.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sonpham.sensors_publishers.ui.quote.ArticleDetailActivity"
            android:label=""
            android:parentActivityName="com.sonpham.sensors_publishers.ui.ListActivity" />
        <activity
            android:name="com.sonpham.sensors_publishers.ui.ServerInfoActivity"
            android:label="Server"
            android:parentActivityName="com.sonpham.sensors_publishers.ui.ListActivity" />
        <activity
            android:name="com.sonpham.sensors_publishers.ui.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="com.sonpham.sensors_publishers.ui.ListActivity" />

    </application>

</manifest>
